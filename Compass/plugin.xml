<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.booway.compass" version="0.0.2"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Compass</name>
    <js-module name="Compass" src="www/Compass.js">
        <clobbers target="Compass" />
    </js-module>
    <platform name="android">
        <!--允许程序打开网络套接字-->
        <uses-permission android:name="android.permission.INTERNET" />
        <!--允许程序设置内置sd卡的写权限-->
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <!--允许程序获取网络状态-->
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        <!--允许程序访问WiFi网络信息-->
        <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
        <!--允许程序读写手机状态和身份-->
        <uses-permission android:name="android.permission.READ_PHONE_STATE" />
        <!--允许程序访问CellID或WiFi热点来获取粗略的位置-->
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
        <meta-data android:name="com.amap.api.v2.apikey" android:value="e8d7203165833aba9e16ae07e6dd8168">

        </meta-data>
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="Compass">
                <param name="android-package" value="com.booway.compass.Compass" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/Compass.java" target-dir="src/com/booway/compass" />
        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <activity android:name="com.booway.compass.CompassActivity"/>
        </config-file>
        <source-file src="src/android/CompassActivity.java" target-dir="src/com/booway/compass" />

        <!-- <source-file src="src/android/libs/armeabi/libAMapSDK_MAP_v9_2_0.so" target-dir="libs/armeabi" />
        <source-file src="src/android/libs/armeabi-v7a/libAMapSDK_MAP_v9_2_0.so" target-dir="libs/armeabi-v7a" />
        <source-file src="src/android/libs/arm64-v8a/libAMapSDK_MAP_v9_2_0.so" target-dir="libs/arm64-v8a" />
        <source-file src="src/android/libs/x86/libAMapSDK_MAP_v9_2_0.so" target-dir="libs/x86" />
        <source-file src="src/android/libs/x86_64/libAMapSDK_MAP_v9_2_0.so" target-dir="libs/x86_64" />
        <lib-file src="src/android/libs/AMap_Location_V6.1.0_20220414.jar"  /> -->

        <source-file src="src/android/res/layout/activity_compass_layout.xml" target-dir="res/layout" />
        <source-file src="src/android/res/drawable-hdpi/gps_point.png" target-dir="res/drawable-hdpi" />
        <!-- <framework src="src/android/libs/compass_build.gradle" custom="true" type="gradleReference" /> -->
    </platform>
</plugin>